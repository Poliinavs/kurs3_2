<div class="min-vw-100 d-flex flex-column align-items-center justify-content-center">
    <form class="d-flex flex-column gap-3 w-50 border rounded border-primary bg-light p-3" method="post" action="/Admin/SignIn">
        <div class="form-group">
            <label class="text-dark">Username:</label>
            <input class="form-control" name="username" value="@ViewBag.Username" />
        </div>
        <div class="form-group">
            <label class="text-dark">Password:</label>
            <input type="password" class="form-control" name="password" value="@ViewBag.Password" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>

        @await Html.PartialAsync("ErrorsBlock")
    </form>
</div>
