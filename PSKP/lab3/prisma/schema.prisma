// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL") // Use an environment variable for security and flexibility
}

model AUDITORIUM {
  AUDITORIUM                 String          @id(map: "PK__AUDITORI__5372601054F2FE49") @db.Char(10)
  AUDITORIUM_NAME            String?         @db.VarChar(200)
  AUDITORIUM_CAPACITY        Int?
  AUDITORIUM_TYPE            String          @db.Char(10)
  AUDITORIUM_TYPE_AUDITORIUM AUDITORIUM_TYPE @relation("AUDITORIUM_AUDITORIUM_TYPEToAUDITORIUM_TYPE", fields: [AUDITORIUM_TYPE], references: [AUDITORIUM_TYPE], onUpdate: NoAction, onDelete: NoAction, map: "FK__AUDITORIU__AUDIT__440B1D61")
}

model AUDITORIUM_TYPE {
  AUDITORIUM_TYPE     String       @id(map: "AUDITORIUM_TYPE_PK") @db.Char(10)
  AUDITORIUM_TYPENAME String       @db.VarChar(30)
  AUDITORIUM          AUDITORIUM[] @relation("AUDITORIUM_AUDITORIUM_TYPEToAUDITORIUM_TYPE")
}

model FACULTY {
  FACULTY                        String   @id(map: "PK_FACULTY") @db.Char(10)
  FACULTY_NAME                   String?  @db.VarChar(50)
  PULPIT_PULPIT_FACULTYToFACULTY PULPIT[] @relation("PULPIT_FACULTYToFACULTY")
}

model PULPIT {
  PULPIT                          String    @id(map: "PK_PULPIT") @db.Char(10)
  PULPIT_NAME                     String?   @db.VarChar(100)
  FACULTY                         String    @db.Char(10)
  FACULTY_PULPIT_FACULTYToFACULTY FACULTY   @relation("PULPIT_FACULTYToFACULTY", fields: [FACULTY], references: [FACULTY], map: "FK_PULPIT_FACULTY")
  SUBJECT_SUBJECT_PULPITToPULPIT  SUBJECT[] @relation("SUBJECT_PULPITToPULPIT")
  TEACHER_TEACHER_PULPITToPULPIT  TEACHER[] @relation("TEACHER_PULPITToPULPIT")
}

model SUBJECT {
  SUBJECT                       String @id(map: "PK_SUBJECT") @db.Char(10)
  SUBJECT_NAME                  String @db.VarChar(50)
  PULPIT                        String @db.Char(10)
  PULPIT_SUBJECT_PULPITToPULPIT PULPIT @relation("SUBJECT_PULPITToPULPIT", fields: [PULPIT], references: [PULPIT], onUpdate: NoAction, onDelete: NoAction, map: "FK_SUBJECT_PULPIT")
}

model TEACHER {
  TEACHER                       String  @id(map: "PK_TEACHER") @db.Char(10)
  TEACHER_NAME                  String? @db.VarChar(50)
  PULPIT                        String  @db.Char(10)
  PULPIT_TEACHER_PULPITToPULPIT PULPIT  @relation("TEACHER_PULPITToPULPIT", fields: [PULPIT], references: [PULPIT], onUpdate: NoAction, onDelete: Cascade, map: "FK_TEACHER_PULPIT")
}
